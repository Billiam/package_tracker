<ul class="nav nav-tabs">
  <li class=active> <%= link_to tag_icon(:list, pat(:list)), url(:preferences, :index) %></li>
</ul>
<div class=tabs-content>
  <table id=list class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
                <th class=header> <%= mat(:preference, :key) %></th>
                <th class=header> <%= mat(:preference, :value) %></th>
                <th class=header> <%= mat(:preference, :description) %></th>
                <th class="header list-row-action-header"></th>
      </tr>
    </thead>

    <tbody>
      <% @preferences.each do |preference| %>
        <tr class=list-row>
          <td class=list-column> <%= preference.key %> </td>
          <td class=list-column> <%= preference.value %> </td>
          <td class=list-column> <%= preference.description %> </td>
          <td class="list-column list-row-action">
            <div class='list-row-action-wrapper'>
               <%= link_to tag_icon(:edit), :href => url(:preferences, :edit, :id => preference.id), :rel => :tooltip, :title => "#{pat(:edit)} preference", :class => 'list-row-action-wrapper-link' %>
             </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
